{
  "name": "whatsapp-enterprise",
  "version": "1.0.0",
  "description": "Sistema Inteligente de Gerenciamento WhatsApp para NegÃ³cios",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "cp backend/.env.example backend/.env && cp frontend/.env.example frontend/.env"
  },
  "keywords": [
    "whatsapp",
    "enterprise",
    "automation",
    "ai",
    "puppeteer",
    "whatsapp-web.js",
    "business",
    "management",
    "leads",
    "marketing"
  ],
  "author": "WhatsApp Enterprise Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/whatsapp-enterprise.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/whatsapp-enterprise/issues"
  },
  "homepage": "https://github.com/seu-usuario/whatsapp-enterprise#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "next-auth": "^4.24.11",
    "sqlite3": "^5.1.7"
  }
}
